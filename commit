#remove dead files
git ls-files --deleted | xargs git rm

#add files to stage with patterns
find . -name '*.php' | xargs git add
find . -name '*.html' | xargs git add
find . -name '*.png' | xargs git add
find . -name '*.jpg' | xargs git add
find . -name '*.ico' | xargs git add
find . -name '*.md' | xargs git add
find . -name '*.css' | xargs git add
find . -name '*.ttf' | xargs git add
find . -name '*.txt' | xargs git add

#commit changes
git commit